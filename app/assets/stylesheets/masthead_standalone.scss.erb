// Used for web apps that only includes the masthead and footer.
// Will only style elements inside the #malmo-masthead and #malmo-footer
@import 'malmo_<%= ENV["AUDIENCE"] %>';

@import 'bootstrap_custom';
@import 'jquery-ui.helpers.min';
@import 'autocomplete';
@import 'sitesearch';

@import '<%= ENV["AUDIENCE"] %>/masthead';
#malmo-masthead {
  font-size: 16px;
}

@import 'footer';
@import 'consent';
@import 'fonts';

body {
  padding: 0;
  margin: 3.5em 0 0;
}

a,
a:hover {
  text-decoration: underline;
}

.visuallyhidden {
  position: absolute;
  overflow: hidden;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
}
